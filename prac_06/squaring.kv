BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 60
            multiline: False
            width: 200
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5,1
            Button:
                text: 'square'
                on_press: app.handle_calculate(float(input_number.text))
            Button:
                text: 'reset'
                on_press: app.handle_reset()
        Label:
            id:output_label
            font_size:48
            color: (0,2,0,1)
            size_hint: 0.5,1
        # the following line specifies the function in the app class to call when the button is pressed
 
    Label:
        text:'Enter a number and press Square'